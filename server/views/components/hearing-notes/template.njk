<div class="app-summary-card__body">

    <div class="govuk-grid-row govuk-grid-column-full">
        <table class="govuk-table">
        {% for previousNote in params.hearing.notes %}
            <tr class="govuk-table__row">
                <td class="govuk-table__cell" id="previous-note-{{ previousNote.noteId }}">
                    <div class="govuk-grid-row">
                        <span class="govuk-grid-column-full case-comments-comment-display">{{ previousNote.note }}</span>
                    </div>
                    <div class="govuk-grid-row govuk-!-margin-top-2">
                        <div class="govuk-grid-column-one-half govuk-!-padding-bottom-2">
                            <span class="govuk-caption-m govuk-!-font-size-16">{{ previousNote.author }} on {{ previousNote.created | hearingNoteTimeFormat }}
                        </div>
                        <div class="govuk-grid-column-one-quarter govuk-!-font-size-16">
                            {% if previousNote.createdByUuid === params.currentUserUuid %}
                                <a class="govuk-link" href="summary/notes/delete?targetHearingId={{ params.hearing.hearingId }}&noteId={{ previousNote.noteId }}">Delete</a>
                            {% endif %}
                        </div>
                    </div>
                    <hr class="govuk-section-break govuk-section-break--m govuk-section-break--visible">
                </td>
            </tr>
        {% endfor %}
        </table>
    </div>

    <form id="save-notes-{{ params.hearing.hearingId }}" action="summary/notes" method="post">

        <details class="govuk-details govuk-!-margin-bottom-0" data-module="govuk-details">
            <summary class="govuk-details__summary govuk-!-margin-bottom-0">
                <span class="govuk-details__summary-text">Add a note</span>
            </summary>
            <div class="govuk-details__text govuk-!-padding-bottom-0">
                <label class="govuk-label" for="note-box-{{ params.hearing.hearingId }}" type="hidden">Add note</label>
                <textarea class="govuk-textarea" id="note-box-{{ params.hearing.hearingId }}" name="note" rows="5" aria-describedby="note-box"></textarea>
                <button class="govuk-button case-comments-save-button" type="submit" data-module="govuk-button">Save</button>
                <input type="hidden" name="hearingId" value="{{ params.hearing.hearingId }}"/>
            </div>
        </details>
    </form>
</div>

