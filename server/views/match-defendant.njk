{% extends "partials/layout.njk" %}

{% if session.matchType === 'bulk' %}
    {%- set backUrl = '/match/' + session.matchType + '/' + session.matchDate -%}
{% else %}
    {%- set backUrl = '/case/' + data.caseNo + '/details' -%}
{% endif %}

{% block backlink %}

    {%- from "govuk/components/back-link/macro.njk" import govukBackLink -%}
    {{ govukBackLink({
        text: "Back",
        href: backUrl
    }) }}

{% endblock %}

{% block content %}

    {% if session.serverError %}
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-three-quarters">
            {%- from "moj/components/banner/macro.njk" import mojBanner -%}
            {{ mojBanner({
                type: 'warning',
                text: 'Something went wrong - try again.',
                iconFallbackText: 'Warning'
            }) }}
        </div>
    </div>
    {% endif %}

    {% if session.formError %}
        {% from "govuk/components/error-summary/macro.njk" import govukErrorSummary %}
        {{ govukErrorSummary({
            titleText: "There is a problem",
            errorList: [
                {
                    text: "Select an nDelius record",
                    href: "#defendant-1"
                }
            ]
        }) }}
    {% endif %}

    <h1 class="govuk-caption-l govuk-!-margin-top-0">{{ data.defendantName }}</h1>
    <h2 class="govuk-heading-l">Review possible nDelius records</h2>
    <p class="govuk-body">Compare details and confirm the correct record for the defendant.</p>

    {% from "govuk/components/inset-text/macro.njk" import govukInsetText %}
    {{ govukInsetText({
        text: "Details that match the defendant are highlighted."
    }) }}

    <form name="matchDefendant" id="matchDefendant" method="post">
        <div class="govuk-grid-row">
            <div class="govuk-grid-column-one-half pac-!-grid-column-45 govuk-!-padding-right-9">

                <h3 class="govuk-heading-m">Defendant details</h3>

                <div class="pac-inset-block">
                    <table class="govuk-table pac-table--no-borders govuk-!-margin-0">
                        <tbody class="govuk-table__body">
                        <tr class="govuk-table__row">
                            <th scope="row" class="govuk-table__header">Name</th>
                            <td class="govuk-table__cell">{{ data.defendantName }}</td>
                        </tr>
                        <tr class="govuk-table__row">
                            <th scope="row" class="govuk-table__header">DOB</th>
                            <td class="govuk-table__cell">{{ params.moment(data.defendantDob, 'YYYY-MM-DD').format('D MMMM YYYY') }}</td>
                        </tr>
                        <tr class="govuk-table__row">
                            <th scope="row" class="govuk-table__header">Address</th>
                            <td class="govuk-table__cell">{{ data.defendantAddress.line1 }} {{ data.defendantAddress.line2 + "," if data.defendantAddress.line2 }} {{ data.defendantAddress.line3 + "," if data.defendantAddress.line3 }} {{ data.defendantAddress.line4 + "," if data.defendantAddress.line4 }} {{ data.defendantAddress.line5 + "," if data.defendantAddress.line5 }} {{ data.defendantAddress.postcode | upper }}</td>
                        </tr>
                        </tbody>
                    </table>
                </div>

            </div>
            <div class="govuk-grid-column-one-half pac-!-grid-column-55 pac-!-border-left govuk-!-padding-left-9">

                <div class="govuk-form-group {{ "govuk-form-group--error" if session.formError }} govuk-!-margin-bottom-0">

                    {% from "govuk/components/fieldset/macro.njk" import govukFieldset %}
                    {% call govukFieldset({
                        legend: {
                            text: data.matchData | length + " nDelius records found",
                            classes: "govuk-fieldset__legend--m govuk-!-margin-bottom-4",
                            isPageHeading: false
                        }
                    }) %}

                    {% if session.formError %}
                        <span id="changed-name-error" class="govuk-error-message">
                            <span class="govuk-visually-hidden">Error:</span> Select an nDelius record
                        </span>
                    {% endif %}

                    <div class="govuk-radios">

                        {% for item in data.matchData %}
                        <div class="govuk-radios__item">
                            <input class="govuk-radios__input" id="defendant-{{ loop.index }}" name="crn" type="radio" value="{{ item.matchIdentifiers.crn }}">
                            <label class="govuk-label govuk-radios__label govuk-!-padding-top-0" for="defendant-{{ loop.index }}">

                                <div class="pac-inset-block">
                                    <table class="govuk-table pac-table--no-borders govuk-!-margin-0">
                                        <tbody class="govuk-table__body">
                                        <tr class="govuk-table__row">
                                            <th scope="row" class="govuk-table__header" style="width: 40%;">Name</th>
                                            <td class="govuk-table__cell">{{ item.forename }} {{ item.surname }}</td>
                                        </tr>
                                        <tr class="govuk-table__row">
                                            <th scope="row" class="govuk-table__header">DOB</th>
                                            <td class="govuk-table__cell">{{ params.moment(item.dateOfBirth, 'YYYY-MM-DD').format('D MMMM YYYY') }}</td>
                                        </tr>
                                        <tr class="govuk-table__row">
                                            <th scope="row" class="govuk-table__header">Address</th>
                                            <td class="govuk-table__cell"><span class="highlight">{{ item.address.addressNumber }} {{ item.address.buildingName + "," if item.address.buildingName }} {{ item.address.town + "," if item.address.town }} {{ item.address.county + "," if item.address.county }} {{ item.address.postcode | upper }}</span></td>
                                        </tr>
                                        <tr class="govuk-table__row">
                                            <th scope="row" class="govuk-table__header">CRN</th>
                                            <td class="govuk-table__cell">{{ item.matchIdentifiers.crn }}</td>
                                        </tr>
                                        <tr class="govuk-table__row">
                                            <th scope="row" class="govuk-table__header">PNC</th>
                                            <td class="govuk-table__cell">{{ item.matchIdentifiers.pnc }}</td>
                                        </tr>
                                        <tr class="govuk-table__row">
                                            <th scope="row" class="govuk-table__header">Probation status</th>
                                            <td class="govuk-table__cell">{{ item.probationStatus }}</td>
                                        </tr>
                                        <tr class="govuk-table__row">
                                            <th scope="row" class="govuk-table__header">Most recent event</th>
                                            <td class="govuk-table__cell">{{ params.moment(item.mostRecentEvent.date, 'YYYY-MM-DD').format('D MMMM YYYY') }} {{ "- " + item.mostRecentEvent.text if item.mostRecentEvent.text }} {{ "(" + item.mostRecentEvent.length + " " + item.mostRecentEvent.lengthUnits + ")" if item.mostRecentEvent.length }}</td>
                                        </tr>
                                        </tbody>
                                    </table>
                                </div>

                            </label>
                        </div>
                        {% endfor %}

                    </div>

                    {% endcall %}

                </div>

            </div>
        </div>

        {% from "govuk/components/details/macro.njk" import govukDetails %}
        {%- set detailsText = "<p class=\"govuk-body\">If the defendant is unknown to probation, you must <a href=\"/match/defendant/" + params.caseNo + "/nomatch\" class=\"govuk-link govuk-link--no-visited-state\">confirm they have no record</a>.</p><p class=\"govuk-body\">If they have an nDelius record, you can <a href=\"/match/defendant/" + params.caseNo + "/manual\" class=\"govuk-link govuk-link--no-visited-state\">link it to them with a case reference number</a>.</p>" -%}
        {{ govukDetails({
            classes: "govuk-!-margin-top-6",
            summaryText: "Can't see the correct record?",
            text: detailsText | safe
        }) }}

        <button type="submit" class="govuk-button">Confirm record</button>

        <p class="govuk-body"><a href="{{ backUrl }}" class="govuk-link govuk-link--no-visited-state">Cancel</a></p>

    </form>

{% endblock %}
