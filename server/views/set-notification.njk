{% extends "partials/layout.njk" %}

{% set title = "Set notification" %}

{% block navigation %}{% endblock %}
{% block cookieBanner %}{% endblock %}
{% block content %}
<form name="notificationForm" id="notificationForm" method="post" novalidate>
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">

      {% if currentNotification | length %}
        {% from "govuk/components/notification-banner/macro.njk" import govukNotificationBanner %}
        {{ govukNotificationBanner({
          html: "<span class='govuk-notification-banner__heading'>" + currentNotification | escape + "</span>"
        }) }}
      {% endif %}

      <h1 class="govuk-heading-l">Set notification banner</h1>
      <p class="govuk-body">This will display a notification banner on the main case list page for all users.</p>

      {% from "govuk/components/warning-text/macro.njk" import govukWarningText %}
      {{ govukWarningText({
        text: "This will be visible to all users immediately.",
        iconFallbackText: "Warning"
      }) }}

      {% from "govuk/components/input/macro.njk" import govukInput %}
      {{ govukInput({
        label: { text: "Notification banner text" },
        id: "notification",
        name: "notification",
        value: currentNotification
      }) }}

      {% from "govuk/components/select/macro.njk" import govukSelect %}
      {{ govukSelect({
        id: "expires",
        name: "expires",
        label: {
          text: "Expires in"
        },
        items: [
          {
            value: "6",
            text: "6 hours"
          },
          {
            value: "12",
            text: "12 hours",
            selected: true
          },
          {
            value: "24",
            text: "24 hours"
          },
          {
            value: "36",
            text: "36 hours"
          },
          {
            value: "48",
            text: "48 hours"
          },
          {
            value: "60",
            text: "60 hours"
          },
          {
            value: "72",
            text: "72 hours"
          }
        ]
      }) }}

      <button type="submit" class="govuk-button">Set notification text</button>

    </div>
  </div>
</form>
{% endblock %}
