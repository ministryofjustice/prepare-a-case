{
  "name": "prepare-a-case",
  "version": "0.0.1",
  "description": "A service to allow probation staff to prepare court cases",
  "author": "MoJ D&T Probation in Court <probation-in-court-team@digital.justice.gov.uk>",
  "license": "MIT",
  "private": true,
  "main": "app.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/ministryofjustice/prepare-a-case.git"
  },
  "engines": {
    "node": ">=12.18.3 <13.0.0 || >=14.9.0"
  },
  "scripts": {
    "precommit": "npm run lint && npm run unit-test && npm run mock-validation-test && npm run int-test",
    "pre-commit-lite": "npm run lint && npm run unit-test && npm run mock-validation-test",
    "pre-push": "snyk test --fail-on=upgradable --org=digital-probation-services && npm run int-test",
    "start-feature": "PORT=3007 NODE_ENV=development node $NODE_DEBUG_OPTION ./bin/www | bunyan -o short",
    "start-feature:dev": "PORT=3007 NODE_ENV=development nodemon $NODE_DEBUG_OPTION ./bin/www | bunyan -o short",
    "delete:reports": "rm ./test-results/cypress/* || true",
    "preint-test": "npm run delete:reports",
    "preint-test:dev": "npm run delete:reports",
    "int-test": "npx cypress run",
    "int-test:ui": "npx cypress open",
    "lint": "npx standard",
    "css-build": "sh ./bin/build-css",
    "start": "npm run css-build && node ./bin/www",
    "start:watch": "nodemon --exec npm run start --scripts-prepend-node-path",
    "unit-test": "NODE_ENV=test npx jest --config=./tests/jest.config.js --ci --detectOpenHandles --forceExit",
    "mock-validation-test": "NODE_ENV=test npx jest --config=mock_validation/jest.config.js --ci",
    "record-build-info": "node ./bin/record-build-info"
  },
  "nodemonConfig": {
    "ignore": [
      "tests/*",
      "coverage/*",
      "integration-tests/*"
    ],
    "delay": 1000,
    "ext": "js,html,njk,scss"
  },
  "standard": {
    "ignore": [
      "/integration-tests/config",
      "/integration-tests/plugins",
      "/integration-tests/support"
    ]
  },
  "jest-junit": {
    "suiteName": "jest tests",
    "outputDirectory": "./test-results/jest",
    "outputName": "results.xml",
    "uniqueOutputName": false,
    "classNameTemplate": "{classname}-{title}",
    "titleTemplate": "{classname}-{title}",
    "ancestorSeparator": " â€º ",
    "usePathForSuiteName": true
  },
  "cypress-cucumber-preprocessor": {
    "nonGlobalStepDefinitions": true,
    "stepDefinitions": "integration-tests/integration/"
  },
  "dependencies": {
    "@ministryofjustice/frontend": "0.0.19-alpha",
    "agentkeepalive": "4.1.3",
    "applicationinsights": "1.8.5",
    "applicationinsights-native-metrics": "0.0.5",
    "axios": "0.20.0",
    "axios-middleware": "0.3.1",
    "bunyan": "1.8.14",
    "bunyan-format": "0.2.1",
    "compression": "1.7.4",
    "cookie-parser": "1.4.5",
    "cookie-session": "1.4.0",
    "csurf": "1.11.0",
    "debug": "4.1.1",
    "dotenv": "8.2.0",
    "express": "4.17.1",
    "express-request-id": "1.4.1",
    "express-session": "1.17.1",
    "govuk-frontend": "3.8.1",
    "helmet": "4.1.0",
    "jsonwebtoken": "8.5.1",
    "jwt-decode": "2.2.0",
    "memorystore": "1.6.2",
    "moment": "2.27.0",
    "morgan": "1.10.0",
    "nock": "13.0.4",
    "nunjucks": "3.2.2",
    "passport": "0.4.1",
    "passport-oauth2": "1.5.0",
    "superagent": "6.1.0"
  },
  "devDependencies": {
    "cucumber": "6.0.5",
    "cypress": "5.1.0",
    "cypress-axe": "0.8.1",
    "cypress-cucumber-preprocessor": "2.5.5",
    "jest": "26.4.2",
    "jest-junit": "11.1.0",
    "moxios": "0.4.0",
    "node-sass": "4.14.1",
    "nodemon": "2.0.4",
    "standard": "14.3.4",
    "supertest": "4.0.2",
    "swagger-client": "3.10.12",
    "swagger-model-validator": "3.0.19"
  }
}
