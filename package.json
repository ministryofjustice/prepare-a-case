{
  "name": "prepare-a-case",
  "version": "1.0.0",
  "description": "A service to allow probation staff to prepare court cases",
  "author": "MoJ D&T Probation in Court <probation-in-court-team@digital.justice.gov.uk>",
  "license": "MIT",
  "private": true,
  "main": "app.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/ministryofjustice/prepare-a-case.git"
  },
  "engines": {
    "node": "^20",
    "npm": "^10"
  },
  "scripts": {
    "start-feature": "PORT=3007 NODE_ENV=development node $NODE_DEBUG_OPTION ./bin/www | bunyan -o short",
    "start-feature:dev": "PORT=3007 NOMIS_AUTH_URL=http://localhost:9091/auth NODE_ENV=development nodemon $NODE_DEBUG_OPTION ./bin/www | bunyan -o short",
    "delete:reports": "rm ./test-results/cypress/* || true",
    "preint-test": "npm run delete:reports",
    "preint-test:dev": "npm run delete:reports",
    "int-test": "npx cypress run",
    "int-test:ui": "npx cypress open",
    "lint": "npx standard",
    "css-build": "bash ./bin/build-css",
    "minify-js-css": "bash ./bin/minify-js-css",
    "start": "npm run css-build && npm run minify-js-css && node ./bin/www",
    "start:watch": "npx nodemon --exec npm run start --scripts-prepend-node-path",
    "unit-test": "npx jest --config=./tests/jest.config.js --ci --forceExit",
    "pact-test": "rm -rf pact && npx jest --config=./tests/jest.pact.config.js --ci",
    "record-build-info": "node ./bin/record-build-info",
    "prepare": "husky install"
  },
  "config": {
    "pact_do_not_track": true
  },
  "nodemonConfig": {
    "ignore": [
      "public/**/*.min.*",
      "tests/*",
      "coverage/*",
      "integration-tests/*"
    ],
    "delay": 1000,
    "ext": "js,html,njk,scss"
  },
  "standard": {
    "ignore": [
      "/public/**/*.js",
      "/integration-tests/config",
      "/integration-tests/plugins",
      "/integration-tests/support"
    ]
  },
  "jest-junit": {
    "suiteName": "jest tests",
    "outputDirectory": "./test-results/jest",
    "outputName": "results.xml",
    "uniqueOutputName": false,
    "classNameTemplate": "{classname}-{title}",
    "titleTemplate": "{classname}-{title}",
    "ancestorSeparator": " â€º ",
    "usePathForSuiteName": true
  },
  "cypress-cucumber-preprocessor": {
    "nonGlobalStepDefinitions": true,
    "stepDefinitions": "integration-tests/integration/"
  },
  "dependencies": {
    "@ministryofjustice/frontend": "1.4.1",
    "accessible-autocomplete": "2.0.4",
    "agentkeepalive": "^4.2.1",
    "applicationinsights": "2.3.3",
    "applicationinsights-native-metrics": "0.0.7",
    "axios": "1.6.0",
    "axios-middleware": "0.3.1",
    "bootstrap": "^5.3.2",
    "bunyan": "1.8.15",
    "bunyan-format": "0.2.1",
    "compression": "1.7.4",
    "connect-redis": "6.1.3",
    "cookie-parser": "1.4.6",
    "cookie-session": "2.0.0",
    "csurf": "1.11.0",
    "debug": "4.3.4",
    "dotenv": "16.0.0",
    "express": "4.18.1",
    "express-session": "1.17.3",
    "express-validator": "6.14.0",
    "govuk-frontend": "4.2.0",
    "helmet": "4.6.0",
    "jsonwebtoken": "9.0.0",
    "jwt-decode": "3.1.2",
    "modal-vanilla": "^0.12.0",
    "moment": "2.29.4",
    "morgan": "1.10.0",
    "nunjucks": "3.2.3",
    "passport": "0.6.0",
    "passport-oauth2": "1.6.1",
    "qs": "^6.9.7",
    "redis": "3.1.2",
    "semver": "^7.5.2",
    "superagent": "7.1.3"
  },
  "devDependencies": {
    "@cucumber/cucumber": "8.1.2",
    "@pact-foundation/pact": "9.17.3",
    "ajv": "8.11.0",
    "ajv-errors": "3.0.0",
    "axe-core": "4.4.1",
    "cypress": "^9.7.0",
    "cypress-axe": "0.14.0",
    "cypress-cucumber-preprocessor": "4.3.1",
    "husky": "8.0.1",
    "jest": "27.5.1",
    "jest-junit": "13.2.0",
    "jest-pact": "0.9.3",
    "minify": "8.0.4",
    "mockdate": "3.0.5",
    "moxios": "0.4.0",
    "nock": "^13.2.4",
    "node-sass": "^7.0.3",
    "nodemon": "^2.0.19",
    "redis-mock": "0.56.3",
    "standard": "17.0.0",
    "supertest": "6.2.2",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  }
}
