{
  "name": "prepare-a-case",
  "version": "0.0.1",
  "description": "A service to allow probation staff to prepare court cases",
  "author": "MoJ D&T Probation in Court <probation-in-court-team@digital.justice.gov.uk>",
  "license": "MIT",
  "private": true,
  "main": "app.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/ministryofjustice/prepare-a-case.git"
  },
  "engines": {
    "node": ">=12.13.0 <13.0.0",
    "yarn": "^1.19.0"
  },
  "scripts": {
    "precommit": "yarn lint && yarn unit-test && yarn int-test",
    "delete:reports": "rm ./test-results/cypress/* || true",
    "preint-test": "yarn delete:reports",
    "preint-test:dev": "yarn delete:reports",
    "int-test": "cypress run",
    "int-test:ui": "cypress open",
    "lint": "standard",
    "record-build-info": "node ./bin/build-info",
    "start": "node ./bin/www",
    "unit-test": "NODE_ENV=test yarn jest --ci --reporters=default --reporters=jest-junit --collect-coverage"
  },
  "nodemonConfig": {
    "ignore": [
      "tests/*",
      "coverage/*"
    ],
    "delay": 2500
  },
  "standard": {
    "ignore": [
      "/integration-tests/config",
      "/integration-tests/plugins",
      "/integration-tests/support"
    ]
  },
  "jest": {
    "testEnvironment": "node",
    "verbose": true,
    "clearMocks": true,
    "testMatch": [
      "<rootDir>/(tests)/**/?(*.)(spec|test).{js,jsx,mjs}"
    ]
  },
  "jest-junit": {
    "suiteName": "jest tests",
    "outputDirectory": "./test-results/jest",
    "outputName": "results.xml",
    "uniqueOutputName": false,
    "classNameTemplate": "{classname}-{title}",
    "titleTemplate": "{classname}-{title}",
    "ancestorSeparator": " â€º ",
    "usePathForSuiteName": true
  },
  "cypress-cucumber-preprocessor": {
    "nonGlobalStepDefinitions": true,
    "stepDefinitions": "integration-tests/integration/"
  },
  "dependencies": {
    "@ministryofjustice/frontend": "0.0.17-alpha",
    "axios": "0.19.2",
    "cookie-parser": "1.4.4",
    "debug": "4.1.1",
    "express": "4.17.1",
    "govuk-frontend": "3.5.0",
    "moment": "2.24.0",
    "morgan": "1.9.1",
    "nunjucks": "3.2.0"
  },
  "devDependencies": {
    "axe-core": "3.4.1",
    "cucumber": "6.0.5",
    "cypress": "3.8.3",
    "cypress-axe": "0.5.3",
    "cypress-cucumber-preprocessor": "2.0.1",
    "jest": "25.1.0",
    "jest-junit": "10.0.0",
    "moxios": "0.4.0",
    "node-sass-middleware": "0.11.0",
    "nodemon": "2.0.2",
    "standard": "14.3.1",
    "supertest": "4.0.2"
  }
}
